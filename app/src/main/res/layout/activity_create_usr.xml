<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUsrActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        
        android:orientation="vertical"/>


    <TextView
        android:id="@+id/textView"
        android:background="@color/material_dynamic_primary60"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="39sp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Crear Cuenta"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="173dp" />

    <TextView
        android:id="@+id/tvNom"
        android:textColor="@color/black"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:text="Nombre completo:"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="390dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etNom"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="518dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:id="@+id/tvCorreoInst"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Correo institucional:"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="250dp"
        android:layout_marginEnd="90dp"
        />

    <EditText
        android:id="@+id/etCorreoInst"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="448dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="400dp"
        android:textSize="28sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Contraseña"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="190dp"/>

    <EditText
        android:id="@+id/etPsw"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="380dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="338dp"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Confirmar contraseña"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="65dp"/>

    <EditText
        android:id="@+id/etConfPsw"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="320dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="280dp"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Escuela"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="230dp"/>

    <EditText
        android:id="@+id/etEscuela"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="260dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="220dp"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Boleta/Número de empleado"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/etRef"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="190dp"
        android:layout_marginEnd="80dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="220dp"
        android:textColor="@color/black"
        android:background="@color/material_dynamic_primary60"
        android:id="@+id/entrarBtn"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Registrarse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>